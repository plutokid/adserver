%head
  - @stylesheets.each do |style|
    %link{rel:'stylesheet', href:"/styles/#{style}"}
  - @scripts.each do |script|
    %script{src:"/scripts/#{script}"}
  %title= @title

%body
  #header
    %table
      %tr.title-container
        %td{colspan:2}
          %span.title= @title

      %tr
        %td#standard-nav
          #nav-container
            %ul#navbar

              %li.item
                %a{href:'/'} Home

              - if authorized?
                %li.item
                  %a{href:'/new'} Create New Ad

                %li.item
                  %a{href:'/sample-ad'} View A Sample Ad

                %li.item#ads-list
                  %a{href:"/list"} Display
                  %span#refresh-button.off
                    %a{href:"javascript:reload_ads_list();"} (refresh)
                  %ul.item-list
                    %li.detail-item Loading…

        %td#login-logout
          #nav-container
            - if authorized?
              %ul#navbar
                %li.item
                  %a{href:'/logout'} Logout
            - else
              %ul#navbar
                %li.item
                  %a{href:'/login'} Login

  %div= yield

